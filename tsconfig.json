{
  "extends": "@gravity-ui/tsconfig/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "resolveJsonModule": true,
    "outDir": ".",
    "module": "esnext",
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
  ]
}
